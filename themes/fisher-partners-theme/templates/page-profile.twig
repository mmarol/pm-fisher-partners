{% extends "base.twig" %}

{% set page_class = "profile" %}

{% block content %}
	<section class="studio">
		<h2 class="page__subtitle studio__title">{{ page.studio_title }}</h2>
		<div class="page__description studio__description">{{ page.meta('studio_description') }}</div>
		<figure class="studio__image">
			<img src="{{ Image(page.studio_image).src }}" alt="{{ Image(page.studio_image).alt }}" srcset="{{ Image(page.studio_image).srcset }}">
			<figcaption class="studio__link">
				<a href="{{ page.team_link.url }}">{{ page.team_link.title }}</a>
			</figcaption>
		</figure>
	</section>

	<section class="pillars">
		<h2 class="page__subtitle pillars__title">{{ page.pillars_title }}</h2>
		{% for pillar in page.meta('pillars') %}
			{% if pillar.size == "Full" %}
				<section class="pillar--full">
					<figure class="pillar">
						{% if pillar.text %}
							<figcaption class="pillar__text">{{ pillar.text }}</figcaption>
						{% endif %}
						{% if pillar.illustration %}
							<div class="pillar__image">
								<img src="{{ Image(pillar.illustration).src }}" alt="{{ Image(pillar.illustration).alt }}" srcset="{{ Image(pillar.illustration).srcset }}">
							</div>
						{% endif %}
					</figure>
				</section>
			{% elseif pillar.size == "Half" %}
				<section class="pillar--half">
					<figure class="pillar">
						{% if pillar.text_left %}
							<figcaption class="pillar__text">{{ pillar.text_left }}</figcaption>
						{% endif %}
						{% if pillar.illustration_left %}
							<div class="pillar__image">
								<img src="{{ Image(pillar.illustration_left).src }}" alt="{{ Image(pillar.illustration_left).alt }}" srcset="{{ Image(pillar.illustration_left).srcset }}">
							</div>
						{% endif %}
					</figure>
					<figure class="pillar">
						{% if pillar.text_right %}
							<figcaption class="pillar__text">{{ pillar.text_right }}</figcaption>
						{% endif %}
						{% if pillar.illustration_right %}
							<div class="pillar__image">
								<img src="{{ Image(pillar.illustration_right).src }}" alt="{{ Image(pillar.illustration_right).alt }}" srcset="{{ Image(pillar.illustration_right).srcset }}">
							</div>
						{% endif %}
					</figure>
				</section>
			{% endif %}
		{% endfor %}
	</section>

	<section class="resilience">
		<h2 class="page__subtitle resilience__title">{{ page.resilience_title }}</h2>
		<div class="page__description resilience__description">{{ page.meta('resilience_description') }}</div>
		<figure class="resilience__image">
			<img src="{{ Image(page.resilience_image).src }}" alt="{{ Image(page.resilience_image).alt }}" srcset="{{ Image(page.resilience_image).srcset }}">
			<figcaption class="studio__link">{{ Image(page.resilience_image).caption }}</figcaption>
		</figure>
	</section>

	<section class="spaces">
		<h2 class="page__subtitle">{{ page.spaces_title }}</h2>
		{% for space in page.meta('spaces') %}
			<article class="space">
				<figure class="space__image">
					<img src="{{ Image(space.image).src }}" alt="{{ Image(space.image).alt }}" srcset="{{ Image(space.image).srcset }}">
				</figure>
				<div class="space__details">
					<p class="space__name">{{ space.name }}</p>
					{# <p class="space__time">{{ la_time }}</p> #}
					{# <p class="space__time">{{ ny_time }}</p> #}
					<div class="space__location">{{ space.address }}</div>
				</div>
			</article>
		{% endfor %}
	</section>

	<section class="awards">
		<h2 class="page__subtitle awards__title">{{ page.awards_title }}</h2>
		{% for project in projects %}
			<div class="award__section">
				<h4 class="award__project">{{ project.title }}</h4>
				{% for award in project.meta('awards') %}
					{% if award.award_link %}
						<p class="award__title">
							<a class="award__link" href="{{ award.award_link }}">{{ award.title }}</a>
						</p>
					{% else %}
						<p class="award__title">{{ award.title }}</p>
					{% endif %}
				{% endfor %}
			</div>
		{% endfor %}
	</section>
{% endblock %}
