{% extends "base.twig" %}

{% set page_class = "engage" %}

{% block content %}
	<section class="contact-form">
		<h2 class="page__subtitle">{{ page.form_title }}</h2>
		{{ page.form_shortcode|shortcodes }}
		<figure class="form__image">
			<img src="{{ Image(page.form_image).src }}" alt="{{ Image(page.form_image).alt }}" srcset="{{ Image(page.form_image).srcset }}">
		</figure>
	</section>

	<section class="opportunities">
		<h2 class="page__subtitle opportunities__subtitle">{{ page.opportunities_title }}</h2>
		<article class="opportunities__overview">
			<div class="page__description opportunities__description">{{ page.meta('opportunities_description') }}</div>
			<img src="{{ Image(page.opportunities_image).src }}" alt="{{ Image(page.opportunities_image).alt }}" srcset="{{ Image(page.opportunities_image).srcset }}" class="opportunities__image">
		</article>
		<section class="opportunities__list">
			{% for opportunity in page.meta('opportunities') %}
				<article class="job-posting">
					<p class="job-posting__date">{{ opportunity.posted_date|date('F j, Y') }}</p>
					<h3 class="job-posting__title">
						<a href="{{ opportunity.link }}">{{ opportunity.title}}</a>
					</h3>
					<p class="job-posting__contact">Contact:
						<a href="mailto:{{ opportunity.contact_email }}">{{ opportunity.contact_email }}</a>
					</p>
				</article>
			{% endfor %}
		</section>
	</section>
{% endblock %}
